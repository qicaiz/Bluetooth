<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qc.bluetooth.MainActivity">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/phone"
            />
        <ImageView
            android:id="@+id/image_connect_status"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/disconnect"
            android:scaleType="fitXY"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bluetooth"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/txt_connect_info"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未连接设备"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/holo_red_dark"
        android:gravity="center_vertical"
        >
        <Button
            android:id="@+id/btn_turn_on_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开灯"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"

        />
        <Button
            android:id="@+id/btn_turn_off_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关灯"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffff00"
        android:gravity="center_vertical"
        >
        <Button
            android:id="@+id/btn_turn_on_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开灯"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/btn_turn_off_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关灯"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#008B00"
        android:gravity="center_vertical"
        >
        <Button
            android:id="@+id/btn_turn_on_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开灯"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/btn_turn_off_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关灯"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>

</LinearLayout>
